# Kalshi API Configuration
KALSHI_API_KEY=your_api_key_here
KALSHI_PRIVATE_KEY=your_private_key_here
# Optionally point to a file containing the private key (e.g., when mounting secrets)
# KALSHI_PRIVATE_KEY_FILE=/run/secrets/kalshi_private_key
# Or supply a single-line base64 encoded version of the private key for Docker env files
# KALSHI_PRIVATE_KEY_BASE64=base64_encoded_private_key
KALSHI_ENVIRONMENT=sandbox

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/kalshi_agent
REDIS_URL=redis://localhost:6379/0
# Set to true only for local development; production deployments must run migrations
AUTO_CREATE_TABLES=false

# Security
SECRET_KEY=your_secret_key_here_change_in_production
# Comma-separated whitelist of allowed origins; do not use "*" in production
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# External API Keys
NEWS_API_KEY=your_news_api_key
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API (for sentiment analysis)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=kalshi_agent/1.0

# Risk Management
DEFAULT_RISK_PROFILE=moderate
MAX_DAILY_TRADES=10
ENABLE_AUTO_TRADING=false
MIN_CONFIDIENCE_THRESHOLD=60.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Analysis Configuration
MODEL_RETRAIN_INTERVAL=7  # days
ENSEMBLE_WEIGHT_UPDATE_INTERVAL=1  # day
MAX_HISTORICAL_DAYS=365